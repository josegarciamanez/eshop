{{> partials/menu}}
<div class="col-lg-9">
    <div class="col-lg-12">
        <h2>Clientes</h2>
    </div>
    <div class="col-lg-12 search_bar">
        <div class="input-group">
            <input type="text" name="customer_filter" id="customer_filter" class="form-control input-lg" placeholder="Filtrar Clientes">
            <span class="input-group-btn">
                <button class="btn btn-success btn-lg" id="btn_customer_filter">Filtrar</button>
                <a href="/admin/customers" class="hidden-xs btn btn-warning btn-lg"><i class="fa fa-times" aria-hidden="true"></i></a>
            </span>
        </div>
        <p class="text-warning top-pad-10">Los clientes pueden ser filtrados por: email, nombre o número de teléfono</p>
    </div>
    {{#if customers}}
        <div class="col-lg-12">
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>
                        Customers
                        {{#if searchTerm}}
                            - <span class="text-danger">Término Filtrado: {{searchTerm}} </span>
                        {{/if}}
                    </strong>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-4">
                            <h5 class="text-info"><strong>Email</strong></h5>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-info"><strong>Nombre</strong></h5>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-info"><strong>Teléfono</strong></h5>
                        </div>
                    </div>
                </li>
                {{#each customers}}
                    <li class="list-group-item">
                        <div class="row">
                            <a href="/admin/customer/view/{{this._id}}">
                                <div class="col-md-4">
                                    <h5 class="">{{this.email}}</h5>
                                </div>
                                <div class="col-md-4">
                                    <h5 class="">{{this.firstName}} {{this.lastName}}</h5>
                                </div>
                                <div class="col-md-4">
                                    <h5 class="">{{this.phone}}</h5>
                                </div>
                            </a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    {{else}}
    <h4 class="text-center">
        No se encontraron pedidos
    </h4>
    {{/if}}
</div>